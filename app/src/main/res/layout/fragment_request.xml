<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please fill following details to request a topic of your choice, We will inform you by mail when it is published."/>

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:layout_below="@+id/txt"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="ayushdeep1111@yahoo.com"
        android:textColor="#000"
        />

    <EditText
        android:inputType="textLongMessage"
        android:layout_below="@+id/email"
        android:id="@+id/request_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Topic of your choice"
        android:textColorHint="#000"
        />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/request_topic"
        android:layout_centerInParent="true"
        android:text="SEND"
        android:layout_marginTop="80dp"
        android:textSize="17sp"
        android:background="#f2f2f2"
        android:textColor="#000"
        />

</RelativeLayout>